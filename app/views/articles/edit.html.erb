<h1>Edit article details</h1>

<% if @article.errors.any? %>
  <h2>The following error messages occured</h2>
  <ul>
    <%  @article.errors.full_messages.each do |error_message| %>
      <li><%= error_message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @article, local:true) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Article overview', articles_path %>
