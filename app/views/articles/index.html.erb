
<!DOCTYPE html>
<html>
  <head>
    <title>AlphaBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div id="page-content">
      <h1 class="text-center mt-4">Listing all Articles</h1>
      <div class="container">
        <% @all_articles.each do |article| %>
          <div class="row justify-content-center mt-4">
            <div class="col-8">
              <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header">
                  by Kai Nass
                </div>
                <div class="card-body">
                  <h5 class="card-title"> <%= link_to article.title, article_path(article.id), class: "text-success" %> </h5>
                  <p class="card-text"> <%= truncate(article.description, length: 100) %> </p>
                  <%= link_to 'Show', article_path(article.id), class: "btn btn-outline-success" %>
                  <%= link_to 'Edit', edit_article_path(article.id), class: "btn btn-outline-primary" %>
                  <%= link_to 'Delete', article_path(article.id),class: "btn btn-outline-danger", method: :delete, data:{confirm: "Are you sure?"}  %>
                </div>
                <div class="card-footer text-muted font-italic">
                  <small>Created <%= time_ago_in_words(article.created_at) %> ago // Updated <%= time_ago_in_words(article.updated_at) %> ago</small>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </body>
</html>
